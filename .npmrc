# NPM Configuration for F2016-6-DIF Soccer Coach App
# 
# Use exact versions for better reproducibility
save-exact=true

# Skip peer dependency conflicts from optional typescript peer deps
# (react-scripts wants typescript@^3||^4, i18next/react-i18next want typescript@^5)
legacy-peer-deps=true

# NOTE: Security auditing is enabled by default
# We handle the known Create React App false positives through package.json overrides
# instead of suppressing all audits globally